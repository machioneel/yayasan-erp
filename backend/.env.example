# Server Configuration
PORT=8080
ENV=development
APP_NAME=Yayasan ERP

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=yayasan_erp
DB_SSLMODE=disable
DB_TIMEZONE=Asia/Jakarta

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=168h

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ALLOW_CREDENTIALS=true

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@yayasan.org

# Session Configuration
SESSION_TIMEOUT=30m

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# Backup Configuration
BACKUP_PATH=./backups
BACKUP_RETENTION_DAYS=30

# Application Features
ENABLE_AUDIT_LOG=true
ENABLE_MULTI_BRANCH=true
ENABLE_MULTI_CURRENCY=false
DEFAULT_CURRENCY=IDR

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# System Settings
FISCAL_YEAR_START_MONTH=1
DEFAULT_LANGUAGE=id
DEFAULT_TIMEZONE=Asia/Jakarta
